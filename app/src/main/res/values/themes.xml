<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BStory" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorOutline">@color/green</item>
<!--        <item name="colorPrimaryVariant">@color/light_green</item>-->
    </style>

    <style name="Theme.BStory" parent="Base.Theme.BStory" />

    <style name="TextRegular">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextBold">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextExtraBold">
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="AppBarTitle" parent="TextBold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeadlineLanding" parent="TextExtraBold">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="ButtonTitle" parent="TextBold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomTextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_custom_input</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="Theme.BStory.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.BStory.AppWidgetContainer" parent="Theme.BStory.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

</resources>